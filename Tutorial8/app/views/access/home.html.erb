<%= stylesheet_link_tag 'style.css' %>

<h1 class="header">Welcome!!!</h1>

<% if @username %>
  Logged in as <%= @username %><br>
  <%= link_to '<button class="logout">Logout</button>'.html_safe, logout_path %>
<% else %>
  <%= link_to '<button class="login">Login</button>'.html_safe, login_path %>
<% end %>